        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#424242">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- UwU -"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#FFFFFF" android:textStyle="bold"
            android:textSize="30sp" android:fontFamily="casual"
            app:layout_constraintVertical_bias="0.095"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 사용법 - \n    너튜브 앱에서 원하는 영상을 공유해주세요.\n    UwU가 당신을 위해 m4a로 변환해줍니다.\n\n\n    만약 백그라운드 다운로드가 멈춘다면,\n    배터리-관리-모드를 종료해주세요.\n\n                                                       감사!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#FFFFFF" android:textStyle="bold"
            android:textSize="14sp" android:fontFamily="casual"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.309"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- How 2 Use - \n    Open Youtube App and Share the video u want.\n    Then UwU will convert it to m4a files.\n\n\n    If background download stops,\n    please turn battery-management-mode off.\n\n                                                        Thx!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#FFFFFF" android:textStyle="bold"
            android:textSize="14sp" android:fontFamily="casual"
            app:layout_constraintHorizontal_bias="0.493" app:layout_constraintVertical_bias="0.772"/>
